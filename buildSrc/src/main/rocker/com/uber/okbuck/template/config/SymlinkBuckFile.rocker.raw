@import java.util.Map

@args (
    String base,
    Map targetsNameMap
)

@if (valid(targetsNameMap)) {
targets = @{
@for ((key, val) : targetsNameMap) {
    "@key": "@val",
}
@}
}

cmd_list = (
    ["mkdir -p $OUT{}; ".format("@base")] +
    ["cp $(location {}) $OUT{}/{};".format(target, "@base", name) for (target, name) in targets.items()]
)

genrule(
    name = "@name",
    out = ".",
    cmd = " ".join(cmd_list),
    visibility = ["PUBLIC"],
)
